  ---
  export interface Props {
    noPadding?: boolean;
    ariaHidden?: boolean;
  }

  const { noPadding = false, ariaHidden = true } = Astro.props;
  ---

  <div class={`max-w-3xl mx-auto ${noPadding ? "px-0" : "px-4"}`}>
    <hr class="border-skin-line" aria-hidden={ariaHidden} />
  </div>

  <style>
      :root,
      html[data-theme="light"] {
          --color-skin-line: 0, 108, 172; /* 蓝色 */
      }

      html[data-theme="dark"] {
          --color-skin-line: 255, 155, 180;/* 粉色 */
      }


      .border-skin-line {
          border-color: rgb(var(--color-skin-line));
      }
  </style>